function validacion() {
    console.log("comprobando la validación")
    if (nombre.value.trim() == "") {
        alert('Por favor, escribe tu nombre');
        nombre.focus();
        return false;
    } 
    console.log("comprobando el nombre")
    if (direccion.value.trim() == "") {
        alert('Por favor, escribe tu dirección');
        direccion.focus();
        return false;
    }
    console.log("comprobada la dirección")
    if (telefono.value.trim() == "") {
        alert('Por favor, escribe tu teléfono');
        telefono.focus();
        return false;
    }
    console.log("comprobado el teléfono")
    if (email.value.trim() == "") {
        alert('Por favor, escribe tu e-mail');
        email.focus();
        return false;
    }
    console.log("comprobado el email")

    tamaño = document.getElementsByName("tamaño");
            var seleccionado = false;
            for(var i=0; i<tamaño.length; i++) {
                if(tamaño[i].checked) {
                    seleccionado = true;
                    break;
                }
            }
            if(!seleccionado) {
                alert('Debes seleccionar un tamaño para tu pizza');
                return false;
            }
            console.log("comprobado el tamaño")        
    ingredientes = 0;
            if (bacon.checked==true) ingredientes++;
            if (cebolla.checked==true) ingredientes++;
            if (champinon.checked==true) ingredientes++;
            if (peperoni.checked==true) ingredientes++;
        console.log ("has elegido "+ ingredietes + "ingredientes");

        if (ingredientes == 0 ){
            alert ("Debes elegir al menos un ingrediente");
        } 
        console.log("comprobados los ingredientes")
        
            


window.onload = function(){
    formulario_pizza.onsubmit = validacion;                                    
}
}
